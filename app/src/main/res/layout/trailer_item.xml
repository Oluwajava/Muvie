<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/play_trailer_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="@string/trailer"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/play_trailer_one"
        android:layout_toRightOf="@+id/play_trailer_one"
        android:layout_toEndOf="@+id/play_trailer_one"
        android:layout_alignBottom="@+id/play_trailer_one" />


</RelativeLayout>